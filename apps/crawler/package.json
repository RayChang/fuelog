{
  "name": "crawler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "uv build",
    "dev": "uv run python -m fuelog_crawler",
    "lint": "uv run ruff check .",
    "lint:fix": "uv run ruff check . --fix",
    "check-types": "uv run mypy .",
    "test": "uv run pytest",
    "test:watch": "uv run pytest --lf --tb=short",
    "sync": "uv sync",
    "python:sync": "uv sync",
    "python:lint": "uv run ruff check .",
    "python:type-check": "uv run mypy .",
    "python:test": "uv run pytest",
    "python:run": "uv run python -m fuelog_crawler hello"
  }
}
