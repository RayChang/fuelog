{
  "name": "fuelog",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md,yaml,yml}\"",
    "check-types": "turbo run check-types",
    "db:pull": "turbo run db:pull",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "python:sync": "turbo run python:sync",
    "python:lint": "turbo run python:lint",
    "python:type-check": "turbo run python:type-check",
    "python:test": "turbo run python:test",
    "python:run": "turbo run python:run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json,yaml,yml,css,scss}": [
      "prettier --write"
    ],
    "apps/crawler/**/*.py": [
      "cd apps/crawler && uv run ruff format .",
      "cd apps/crawler && uv run ruff check . --fix",
      "cd apps/crawler && uv run mypy ."
    ]
  }
}
