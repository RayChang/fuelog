{
  "name": "fuelog",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:pull": "pnpm --filter @repo/db run prisma:pull",
    "db:generate": "pnpm --filter @repo/db run prisma:generate",
    "db:migrate": "pnpm --filter @repo/db run prisma:migrate",
    "db:studio": "pnpm --filter @repo/db run prisma:studio",
    "postinstall": "pnpm db:generate"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
